<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/f1"/>

        <TextView
            android:id="@+id/f1GP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tekst pod pierwszym zdjęciem"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/f1text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tekst pod pierwszym zdjęciem"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic"/>

        <TextView
            android:id="@+id/icGP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tekst pod drugim zdjęciem"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/ictext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tekst pod drugim zdjęciem"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wec"/>

        <TextView
            android:id="@+id/wecGP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tekst pod trzecim zdjęciem"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/wectext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tekst pod trzecim zdjęciem"
            android:gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

